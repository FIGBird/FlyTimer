<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="tv.figbird.flyTimer.userInterface.controllers.MainController"
      prefHeight="400.0" prefWidth="600.0">
    <HBox>
        <VBox>
            <Label fx:id="timerDisplay" text="starting"/>
            <Label fx:id="currentSplitDisplay" text="starting"/>
            <Button fx:id="startButton" text="Start" onAction="#startTimer"/>
            <Button fx:id="stopButton" text="Stop" onAction="#pauseOrResumeTimer"/>
            <Button fx:id="splitButton" text="Split" onAction="#split"/>
        </VBox>
        <ListView fx:id="splits"/>
    </HBox>
</VBox>
