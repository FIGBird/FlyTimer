<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.MapValueFactory?>
<?import javafx.scene.layout.BorderPane?>
<BorderPane prefHeight="600.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.172-ea"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="tv.figbird.flyTimer.userInterface.controllers.SegmentManagerController">
    <center>
        <TableView fx:id="splitTable" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn text="Split Name" sortable="false" minWidth="200" prefWidth="300">
                    <cellValueFactory>
                        <MapValueFactory key="Split Name"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text="Personal Best" sortable="false" minWidth="125" prefWidth="150">
                    <cellValueFactory>
                        <MapValueFactory key="Personal Best"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text="Sum of Best" sortable="false" minWidth="100" prefWidth="150">
                    <cellValueFactory>
                        <MapValueFactory key="Sum of Best"/>
                    </cellValueFactory>
                </TableColumn>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
    </center>
    <top>
        <Button fx:id="mainButton" mnemonicParsing="false" onAction="#showMain" text="Return"
                BorderPane.alignment="CENTER"/>
    </top>
</BorderPane>
